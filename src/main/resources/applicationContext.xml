		class="com.gu.services.register.FicticionalRegisterServiceImpl" />
	<bean id="extraHourService"
		class="com.gu.services.extrahours.ExtraHourServiceImpl" />
	<context:component-scan
		base-package="com.gu.dbaccess.repositories">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Repository" />
	</context:component-scan>
</beans>